<!DOCTYPE html>
<html>
  <head>
    <title>WhatoEat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: 'all' %>
  </head>

  <body>
    <nav class='navbar'>

      <%# Alerts %>
      <% if flash[:notice] %>
        <div class="notification primary">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="notification danger">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>

    <%# Navbar item %>
      <p class="navbar-brand">
        <%= link_to root_path, class: "navbar-title" do %>
          WhatoEat
        <% end %>
      </p>

    <%# User account item %>
      <div class="account-items">
        <% if user_signed_in? %>
          <p class="control">
            <%= link_to current_user.email, edit_user_registration_path, class: "navbar-item account" %>
          </p>
          <p>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"navbar-item account" %>
          </p>
        <% else %>
          <p class="control">
            <%= link_to 'Login', new_user_session_path, class: "navbar-item account" %>
          </p>
          <p class="control">
            <%= link_to 'Sign Up', new_user_registration_path, class: "navbar-item account" %>
          </p>
        <% end %>
      </div>

    </nav>

    <%= yield %>
  </body>
</html>
